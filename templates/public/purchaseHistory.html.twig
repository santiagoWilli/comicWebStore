{% extends 'public/base.html.twig' %}

{% block body %}
    {% include 'public/navbar.html.twig' %}

    <div class="shoppingcart m-2 px-2 py-3">
        <p>{{ dump(purchases) }}</p>
        <table id="table_dataTable" class="table table-bordered" style="width: 100%">
            <thead>
            <tr class="table-primary">
                <th>Fecha</th>
                <th>Id compra</th>
                <th>Resumen</th>
            </tr>
            </thead>
            <tbody>
            {%  for key, item in purchases %}
                <tr>
                    <td>{{ item.date }}</td>
                    <td>{{ item.id }}</td>
                    <td><p class="text-center"><button type="button" class="btn btn-primary resume-table">Ver</button></p></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready( function () {
            $('#table_dataTable').DataTable({
            });
        });
    </script>
    <script>
        $(document).on("click",".resume-table", function(e){
            bootbox.alert({
                title: {{ item.id }},
                backdrop:true,
                message:"",
            })
        } )
    </script>
{% endblock %}