{% extends "/admin/base.html.twig" %}

{% block title %} Categorías {% endblock %}

{% block body %}
    <h3 class="text-center mt-3">Gestión de categorías de cómics</h3>

    <a href="" class="ml-3 mb-3 btn btn-primary">Crear categoría</a>

    <div class="table-responsive">
        <table id="table_dataTable" class="table table-striped table-bordered first">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            {% for tag in tags %}
                <tr>
                    <td>{{ tag.nombre }}</td>
                    <td>
                        <a href="" class="bg-form-dark p-1 br-1"><i class="fas fa-edit"></i></a>
                        <a href="#" class="bg-form-dark p-1 br-1"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}